{% extends 'baseback.html.twig' %}
{% block body %}
<div class="app-content">
	<div class="side-app">
						<div class="page-header">
							<h4 class="page-title">Liste des articles</h4>
							<ol class="breadcrumb">
								<li class="breadcrumb-item"><a href="#"><i class="fe   fe-box mr-1"></i> Tables</a></li>
								<li class="breadcrumb-item active" aria-current="page">Data Tables</li>
							</ol>
						</div>
						
						<div class="row">
							<div class="col-md-12 col-lg-12">
								<div class="card">
									<div class="card-header">
										<div class="card-title">Liste des articles</div>
									</div>
									<div class="card-body">
										<div class="table-responsive">
											<table id="example" class="table table-striped table-bordered" >
												<thead>
													<tr>
														<th class="wd-15p">ID</th>
														<th class="wd-15p">Nom</th>
														<th class="wd-20p">Description</th>
														<th class="wd-15p">Catégorie</th>
                                                        <th class="wd-15p">Prix</th>
                                                        <th class="wd-15p">Image</th>
														<th class="wd-10p" >Modifier</th>
														<th class="wd-25p">Supprimer</th>
													</tr>
												</thead>
												<tbody>
													<tr {% for a in article %}>
                                                        <td>{{a.id}}</td>
                                                        <td>{{a.nom}}</td>
                                                        <td>{{a.description}}</td>
                                                        <td>{{a.categorie}}</td>
                                                        <td>{{a.prix}}</td>
                                                        <td><img src="{{ asset('uploads/' ~ a.image ) }}" alt="img" class="image" style="max-height: 150px; width: 120px;" ></td>
                                                        <td><a href="{{ path('ModifierArticle', {'id':a.id}) }}" class="btn btn-success">Modifier</a></td>
                                                        <td> <a href="{{ path('SupprimerArticle', {'id':a.id}) }}" class="btn btn-secondary" role="button" onClick="validateSubmit()">Supprimer</a></button></td>
                                                    </tr {% endfor %}>
                                                    </tbody>
											</table>
										</div>
									</div>
									{{ knp_pagination_render(article)}}
								</div>
									<!-- table-wrapper -->
                                <div class="card-body">
										<a class="btn btn-primary" href="{{path('AjouterArticle')}}"> Ajouter article </a>
										<a class="btn btn-primary" href="{{path('Liste')}}"> Imprimer la liste des articles  </a>
										<a class="btn btn-primary" href="{{path('AfficheCommande')}}"> Liste des commandes  </a>
										
									</div>

								
                                
								<!-- section-wrapper -->
							</div>
						</div>
		</div>
</div>
    <script>									

function validateSubmit() {
                         result = confirm("Êtes-vous sur de vouloir supprimer l'article ?");
                        if (result) {
                           $('#form').submit();
                           
                        
                                  }
                        }
                        </script>	                    

{% endblock %}
