{% extends 'baseback.html.twig' %}
{% block body %}
<div class="app-content">
					<div class="side-app">
						<div class="page-header">
							<h4 class="page-title">Liste des commandes</h4>
							<ol class="breadcrumb">
								<li class="breadcrumb-item"><a href="#"><i class="fe   fe-box mr-1"></i> Tables</a></li>
								<li class="breadcrumb-item active" aria-current="page">Data Tables</li>
							</ol>
						</div>
						<div class="row">
							<div class="col-md-12 col-lg-12">
								<div class="card">
									<div class="card-header">
										<div class="card-title">Liste des commandes</div>
									</div>
									<div class="card-body">
									<form role="search" id="nav-search-form" method="post" action="{{ path('triid') }}"> {#bouton tri#}


						<div class="btn-toolbar" role="toolbar" aria-label="Programmatic control">
							<div class="btn-group btn-group-sm" aria-label="Set Select2 option">
								<button class="js-programmatic-set-val btn btn-outline-primary mr-1 mb-1">
									Sort by Date
								</button>
							</div>

					</form>
										<div class="table-responsive">
											<table id="example" class="table table-striped table-bordered" >
												<thead>
													<tr>
														<th class="wd-15p">ID</th>
														<th class="wd-15p">Date</th>
														<th class="wd-20p">Quantité</th>
														<th class="wd-15p">Prix Total</th>
														<th class="wd-10p">Modifier</th>
														<th class="wd-25p">Supprimer</th>
													</tr>
												</thead>
												<tbody>
													<tr {% for c in commande %}>
														<td>{{c.id}}</td>
														<td>{{c.getDate()|date('d-m-Y H:i:s')}}</td>
														<td>{{c.quantite}}</td>
														<td>{{c.getPrixTotal()}}</td>
														<td><a href="{{ path('ModifierCommande', {'id':c.id}) }}" class="btn btn-success">Modifier</a></td>
														<td><a href="{{ path('SupprimerCommande', {'id':c.id}) }}" class="btn btn-secondary">Supprimer</a></td>
													</tr {% endfor %}>
                                                    </tbody>
											</table>
										</div>
									</div>
									<!-- table-wrapper -->
                                <div class="card-body">
										<a class="btn btn-primary" href="{{path('AjouterCommande')}}">Ajouter commande</a>
										<a class="btn btn-primary" href="{{path('ImprimerCommande')}}">Imprimer la commande</a>
										<a class="btn btn-primary" href="{{path('AfficheArticle')}}">Liste des articles</a>
									</div>

								</div>
                                
								<!-- section-wrapper -->
							</div>
                        

{% endblock %}
