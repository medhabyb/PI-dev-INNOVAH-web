											</div>
											<div class="form-group">
												<label class="form-label" for="exampleInputPassword2">Prix Total</label>
												{{ form_widget(form.prix_total , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Prix Total'}} ) }}
                                        {{ form_errors(form.prix_total) }}
											</div>
										
											<div class="form-group mb-0">
												<div class="checkbox checkbox-secondary">
                                                {{ form_widget(form) }}
