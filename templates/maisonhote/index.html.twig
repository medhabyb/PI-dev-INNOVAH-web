{% extends 'baseback.html.twig' %}

{% block body %}
<div class="app-content">
                    <div class="side-app">
                        
                        <div class="row">
                            <div class="col-md-12 col-lg-12">
                                <div class="card">
                                    <div class="card-header">
                                        
                                        <h1 align ="center">Liste des maisons d'hotes</h1><hr>
                                    </div>
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table id="example" class="table table-striped table-bordered" >
                                                <thead>
                                                    <tr>
                                                        <th class="wd-15p">ID</th>
                                                        <th class="wd-15p">Nom</th>
                                                        <th class="wd-20p">Adresse</th>
                                                        <th class="wd-15p">Num</th>
                                                        <th class="wd-15p">Prix</th>
                                                        <th class="wd-15p">Note</th>
                                                        <th class="wd-15p">Image</th>
                                                       
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr  {% for maisonhote in maisonhotes %}>
                                                        <td>{{maisonhote.id}}</td>
                                                        <td>{{maisonhote.nom}}</td>
                                                        <td>{{maisonhote.adresse}}</td>
                                                        <td>{{maisonhote.num}}</td>
                                                        <td>{{maisonhote.prix}}</td>
                                                        <td>{{maisonhote.note}}</td>
                                                        <td><img src="{{ asset('uploads/'~maisonhote.image) }}" style=" width:100px; height:100px; " alt=""/></td>


                                                        <td><a href="{{ path('maisonhote_show', {'id': maisonhote.id}) }}" class="btn btn-success">Supprimer</a></td>
                                                        <td><a href="{{ path('maisonhote_edit', {'id': maisonhote.id}) }}" class="btn btn-secondary">Modifier</a></td>
                                                    </tr {% endfor %}>
                                                    </tbody>
                                            </table>
                                        </div>
                                    </div>
                                    <!-- table-wrapper -->
                                <div class="card-body">
                                        <a class="btn btn-primary" href="{{path('imprimmaison')}}"> Imprimer </a>
                                        <a class="btn btn-primary" href="{{path('trimaisonhote')}}">Tri par nom</a>
                                        <a class="btn btn-primary" href="{{path('statmaisonhote')}}"> Statistiques </a>
                                        <a class="navigation">{{ knp_pagination_render(maisonhotes) }}</a>
                                       
                                    </div>

                                </div>

